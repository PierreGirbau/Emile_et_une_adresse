<div class="wrapper">
  <div class="container">
  <h1>ÉMILE ET UNE ADRESSE</h1>
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3">
        <h2>Croquez Paris !</h2>
        <div class="form-post">
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= f.error_notification %>
            <div class="form-inputs ">
              <%= f.input :first_name, label: false, required: true, autofocus: true, placeholder: 'Prénom' %>
              <%= f.input :birth_date, placeholder: "Date de naissance", as: :string, label: false, required: true, input_html: {class: "datepicker"} %>
              <%= f.input :email, label: false, required: true, autofocus: true, placeholder: 'Adresse email' %>
              <%= f.input :password, label: false, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), placeholder: 'Mot de passe', class: "hint" %>
              <%= f.input :password_confirmation, label: false, required: true, placeholder: 'Confirmez mot de passe' %>
            </div>

            <div class="form-actions">
              <%= f.button :submit, "S'inscrire", class: "btn btn-emile", data: {target: ".bs-example-modal-lg", toggle: "modal"} %>
            </div>

            <div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
              <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                  <h1>Bienvenue dans le monde d'Emile!</h1>
                  <p>Partagez votre bonne adresse à Paris, Émile vous la rendra puissance 1000 !</p>
                  <%= link_to "J'en suis Emile", root_path, class: "btn btn-emile"  %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="footer">
      <h2>Paris</h2>
      <h3>Saison 1 : Les beaux jours à Paname</h3>
    </div>
    <%= link_to "Crée ton adresse", new_place_path, class: "btn btn-emile"  %>
  </div>
</div>

