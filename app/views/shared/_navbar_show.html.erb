<div class="navbar-emile">
  <!-- Logo -->
  <%= link_to places_path, class: "return" do %>
    <i class="fa fas fa-chevron-left" style="font-size: 24px;"></i>
    <p style="display:inline">Retour</p>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-emile-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

      <!-- Links when logged in -->
      <%= link_to "Explorer", places_path, class: "navbar-emile-item navbar-emile-link" %>
      <%#= link_to "Partager une adresse", new_place_path, class: "navbar-emile-item navbar-emile-link" %>
      <%= link_to "Mes adresses", current_user, class: "navbar-emile-item navbar-emile-link" %>
      <%= link_to "Se déconnecter", destroy_user_session_path, method: :delete, class: "navbar-emile-item navbar-emile-link" %>
    <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-emile-item navbar-emile-link" %>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-emile-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown" style="font-size: 30px;"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-emile-dropdown-menu">
        <li><%= link_to "Explorer", places_path %></li>
        <!-- <li><%#= link_to "Partager une adresse", new_place_path %></li> -->
        <li><%= link_to "Mes adresses", current_user %></li>
        <li><%= link_to "Se déconnecter", destroy_user_session_path, method: :delete %></li>
      </ul>
    </div>
  </div>

</div>

