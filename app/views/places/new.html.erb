<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3">
        <div class="form-post">
          <%= simple_form_for @place do |f| %>
            <div class="form-inputs ">
              <%= f.input :name, label: false, placeholder: 'Nom ou adresse de l\'établissement' %>
              <%= f.input :type_of_place, label: "Je recommande cet établissement pour", placeholder: 'No special characters.' %>
              <%= f.button :submit, "Je partage", class: "btn btn-emile" %>
            </div>

            <div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
              <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                  <h1>Bienvenue dans le monde d'Emile!</h1>
                  <p>Partagez votre bonne adresse à Paris, Émile vous la rendra puissance 1000 !</p>
                  <%= link_to "J'en suis Emile", root_path, class: "btn btn-emile"  %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
