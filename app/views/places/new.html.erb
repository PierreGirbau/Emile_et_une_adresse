<%= render 'shared/navbar_with_return' %>
<div class="wrapper">

  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3">

        <div class="modal fade" id= "modal-id" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
          <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content" id="modal-content">
              <h1>Bienvenue dans le monde d'Emile!</h1>
              <p>Partagez votre bonne adresse à Paris, Émile vous la rendra puissance 1000 !</p>
              <button type="button" class="btn btn-emile" id="modal-id-2">J'en suis Emile</button>
            </div>
          </div>
        </div>

        <div class="form-post">
          <%= simple_form_for @place do |f| %>
            <div class="form-inputs ">
              <%= f.input :name, label: false, placeholder: 'Nom de l\'établissement', id: "place_name" %>
              <%= f.input :google_place_id, as: "hidden" %>
              <%= f.input :address, as: "hidden" %>
              <%= f.input :type_of_place, as: :radio_buttons,
                  collection: Category.all, label: "Je recommande cet établissement pour :",
                    wrapper: :vertical_radio_and_checkboxes %>
              <%= f.association :details, as: :radio_buttons,
                  collection: ['Pendant les beaux jours', 'Toute l\'année'], label: "Le top du top c'est :",
                    wrapper: :vertical_radio_and_checkboxes %>
              <%= f.button :submit, "Continuer", class: "btn btn-emile", data: { target: ".bs-example-modal-lg", toggle: "modal" } %>
            </div>

            <div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
              <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                  <h1>Bienvenue dans le monde d'Emile!</h1>
                  <p>Partagez votre bonne adresse à Paris, Émile vous la rendra puissance 1000 !</p>
                  <%= link_to "J'en suis Emile", static_path, class: "btn btn-emile"  %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
