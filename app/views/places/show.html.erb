<%= render 'shared/navbar_show' %>
<div class="show">
  <div class="photo">
    <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= @place.photo %>');">
    </div>
    <div class="big-infos">
      <div class="name">
        <%= @place.name %>
      </div>
      <div class="hearts">
        <p><%= @place.total_heart %></p>
        <i class="fa fas fa-heart"></i>
      </div>
      <div class="budget">
        <i class="fa fa-eur"></i>
        <p>Budget (plaisir) environ <%= @place.average_price.to_i %> euros par personne</p>
      </div>
      <div class="number">
        <i class="fa fa-phone"></i>
        <%= @place.phone_number %>
      </div>
      <div class="website">

        <% if @place.website != "undefined" %>
          <input type="button" class="btn-medium" id="modal-id-2" value="Site web" onclick="window.location.href='<%= @place.website %>'"/>
        <% end %>

      </div>
    </div>
    <br>
    <div class="hours">
      <strong><p>Horaires d'ouverture:</p></strong>
      <ul>
        <li><span><%= @place.periods.split(",")[0] %> / <%= @place.periods.split(",")[1] %></span></li>
        <li><span><%= @place.periods.split(",")[2] %> / <%= @place.periods.split(",")[3] %></span></li>
        <li><span><%= @place.periods.split(",")[4] %> / <%= @place.periods.split(",")[5] %></span></li>
        <li><span><%= @place.periods.split(",")[6] %> / <%= @place.periods.split(",")[7] %></span></li>
        <li><span><%= @place.periods.split(",")[8] %> / <%= @place.periods.split(",")[9] %></span></li>
        <li><span><%= @place.periods.split(",")[10] %> / <%= @place.periods.split(",")[11] %></span></li>
        <li><span><%= @place.periods.split(",")[12] %> / <%= @place.periods.split(",")[13] %></span></li>
      </ul>
    </div>

    <p style="padding-left: 20px;">Les recos qui vont bien :</p>
    <% @place.details.each do |detail| %>
      <div class="comment-box">
        <%= detail.comment %> -
        <%= detail.user.first_name %>
      </div>
    <% end %>
    <div class="other-infos">
      <%= link_to "Y aller", "https://www.google.com/maps/search/?q=place_id:#{@place.google_place_id}", class: "btn btn-emile" %>
      <%= link_to "Enregistrer", place_saved_places_path(@place), method: :post, class: "btn btn-emile", id: "save" %>
    </div>
      <%= image_tag "https://maps.googleapis.com/maps/api/staticmap?zoom=13&size=400x300&sensor=false&maptype=roadmap&markers=color:red|#{@place.address}", class: "map" %>
      <!-- bien pour avoir une carte statique, il faut juste l'adresse de l'endroit -->
  </div>
