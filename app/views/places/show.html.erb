 <%#= render 'shared/navbar_show' %>
<div class="show">
  <div class="photo">
    <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= @place.photo_google %>');">
    </div>
    <div class="big-infos">
      <div class="name">
        <%= @place.name %>
      </div>
      <div class="address">
        <p><u><%= link_to @place.address, "https://www.google.com/maps/search/?q=place_id:#{@place.google_place_id}", target: :_blank %></u></p>
      </div>
      <div class="hearts">
        <p><%= @place.total_heart %></p>
        <i class="fa fas fa-heart"></i>
      </div>
      <div class="budget">
        <i class="fa fa-eur"></i>
        <p><%= @place.average_price.to_i %> euros environ par personne</p>
      </div>
      <div class="number">
        <i class="fa fa-phone"></i>
        <%= @place.phone_number %>
      </div>
      <div class="website">
        <i class="fa fa-globe"></i>
        <% if @place.website != "undefined" %>
          <u><%= link_to 'Site web', "#{@place.website}", target: :_blank %></u>
        <% end %>

      </div>
    </div>
    
    <%= link_to 'Editer', edit_place_path(@place)  %>
    <% if @place.photo %>
      <%= cl_image_tag @place.photo, height: 300, width: 400, crop: :fill %>
    <% end %>

    <div class="hours">
      <strong><p>Horaires d'ouverture :</p></strong>
      <ul>
        <% @place.periods.split(",").each do |day_schedule| %>
          <li><%= day_schedule.capitalize %></li>
        <% end %>
      </ul>
    </div>

    <p style="padding-left: 20px;"><b>Les petites recos qui vont bien :</b></p>
    <% @place.details.each do |detail| %>
      <div class="comment-box">
        <%= @place.comment %> -
        <%= detail&.user&.first_name %>
      </div>
    <% end %>
    <div class="other-infos">

      <%= link_to "Enregistrer dans mon carnet", place_saved_places_path(@place), method: :post, class: "btn btn-emile", id: "save" %>
    </div>
      <%= image_tag "https://maps.googleapis.com/maps/api/staticmap?zoom=16&size=400x300&sensor=false&maptype=roadmap&markers=icon:https://goo.gl/FPQceH|#{@place.address}&key=#{ENV['GOOGLE_API_BROWSER_KEY']}", class: "map" %>
      <!-- bien pour avoir une carte statique, il faut juste l'adresse de l'endroit -->
  </div>
  <%= render 'shared/navbar_app' %>
