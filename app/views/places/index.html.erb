<%= render 'shared/navbar_without_return' %>
<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="search-field">
        <div class="search-bar">
          <%= form_tag places_path, method: :get do %>
            <%= text_field_tag :query,
              params[:query],
              class: "form-control",
              placeholder: "Quel arrondissement? 75002? 75003?..."
            %>
        </div>
        <div class="search-button">
          <%= submit_tag "Go Emile!", class: "btn btn-emile" %>
        </div>
          <% end %>
      </div>
      <% @places.each do |place| %>
        <div class="col-sm-offset-1 col-sm-10">
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://kitt.lewagon.com/placeholder/cities/shanghai');">
            <div class="card-category">
              <h1><%= place.name %></h1>
              <p><%= place.address %></p>
            </div>
            <div class="card-description">
              <p><%= place.type_of_place %></p>
            </div>
            <div class="card-heart">
              <p>8</p>
              <i class="fa fas fa-heart"></i>
            </div>
          </div>
        </div>
      <% end %>
      <% if @places.count == 0 %>
        <div class="few-results">
          <p>Désolé, nous n'avons trouvé aucun résultat, réessayez...</p>
        </div>
      <% elsif @places.count < 3 %>
        <div class="few-results">
          <p>Désolé, nous n'avons pas plus de résultats à vous proposer</p>
        </div>
      <% end %>
    </div>
  </div>
</div>

